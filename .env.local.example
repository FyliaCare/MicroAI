# Public Environment Variables (exposed to browser)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=MicroAI Platform
NEXT_PUBLIC_CONTACT_EMAIL=info@microai.com

# Database (Add your database connection string)
# DATABASE_URL=mongodb://localhost:27017/microai
# DATABASE_URL=postgresql://user:password@localhost:5432/microai

# Authentication (Add your auth secrets)
# JWT_SECRET=your-secret-key-here
# NEXTAUTH_SECRET=your-nextauth-secret-here
# NEXTAUTH_URL=http://localhost:3000

# Email Service (Add your email service credentials)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# Payment Gateway (Add your payment provider keys)
# STRIPE_PUBLIC_KEY=pk_test_xxxxx
# STRIPE_SECRET_KEY=sk_test_xxxxx

# Analytics
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# File Upload
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# API Keys
# API_KEY=your-api-key-here